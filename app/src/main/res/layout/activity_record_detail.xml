<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="view.activity.RecordDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        android:layout_margin="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/record_detail_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重:  110斤"
            android:textSize="25sp"
            android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/record_detail_isweight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/zhengchang"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/record_detail_chayi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与目标体重差5斤"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/yuanzi"/>
            <TextView
                android:id="@+id/record_detail_jichudaixie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基础代谢    832  kcal"
                android:layout_margin="15dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/zhengchang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/tizhong"/>
            <TextView
                android:id="@+id/record_detail_tizhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重    110  斤"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/record_detail_istizhong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/zhengchang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/zhifang"/>
            <TextView
                android:id="@+id/record_detail_zhifang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="脂肪    10.0  %"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/record_detail_iszhifang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/zhengchang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/bmi"/>
            <TextView
                android:id="@+id/record_detail_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI    10.0  "
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/record_detail_isbmi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/zhengchang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>