<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maintheme">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mine_head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/head"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="100dp"/>

    <RelativeLayout
        android:id="@+id/mine_infosetting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/mine_head"
        android:background="@color/mainbluc"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/mine_icon1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@mipmap/mine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人设置"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/mine_icon1"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/right_row"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mine_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/mine_infosetting"
        android:background="@color/mainbluc"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/mine_icon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/mine_icon2"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/right_row"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mine_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/mine_setting"
        android:background="@color/mainbluc"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/mine_11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/weixin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐给好友"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/mine_11"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/right_row"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mine_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/mine_1"
        android:background="@color/mainbluc"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/mine_22"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/biaoyang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给我们评分"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/mine_22"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/right_row"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"/>
    </RelativeLayout>

</RelativeLayout>